{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "payload",
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "node_modules/*": ["./node_modules/*"]
    },
  },
  "include": [
    "payload"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
